@{
    ViewData["Title"] = "Payment Successful";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow border-0 rounded-4">
                <div class="card-body text-center p-5">
                    <div class="mb-4">
                        <i class="bi bi-check-circle-fill text-success" style="font-size: 4rem;"></i>
                    </div>
                    <h2 class="text-success mb-3">Payment Successful!</h2>
                    <p class="text-muted mb-4">
                        Your payment has been processed successfully. You are now enrolled in the course.
                    </p>
                    <div class="d-flex gap-2 justify-content-center">
                        <a asp-controller="Courses" asp-action="MyCourses" class="btn btn-primary">
                            <i class="bi bi-journal-bookmark me-1"></i>Go to My Courses
                        </a>
                        <a asp-controller="Courses" asp-action="Index" class="btn btn-outline-secondary">
                            <i class="bi bi-arrow-left me-1"></i>Browse More Courses
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>