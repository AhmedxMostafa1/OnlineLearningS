@model OnlineLearning.Models.Course

@{
    ViewData["Title"] = "Course Details";
    var role = Context.Session.GetString("UserRole");
    var studentId = Context.Session.GetInt32("UserId");
    bool isEnrolled = false;
    

    if (role == "Student" && studentId.HasValue)
    {
        isEnrolled = Model.Enrollments?.Any(e => e.StudentId == studentId.Value) ?? false;
    }
}

<div class="container mt-4">
    <!-- Feedback -->
    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
    @if (TempData["Alert"] != null)
    {
        <div class="alert alert-warning alert-dismissible fade show" role="alert">
            @TempData["Alert"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
    @if (TempData["Message"] != null)
    {
        <div class="alert alert-info alert-dismissible fade show" role="alert">
            @TempData["Message"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="card shadow-lg border-0 rounded-4">
        <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center rounded-top-4">
            <h3 class="mb-0">
                <i class="bi bi-journal-bookmark-fill me-2"></i>@Model.CourseTitle
            </h3>
            @if (Model.IsPremium == true)
            {
                <span class="badge bg-warning text-dark">
                    <i class="bi bi-star-fill me-1"></i>Premium
                </span>
            }
        </div>

        <div class="card-body">
            <p class="mb-4 text-muted">@Model.CourseDescription</p>

            <ul class="list-group list-group-flush mb-3">
                <li class="list-group-item">
                    <strong><i class="bi bi-person-video2 me-2"></i>Instructor:</strong>
                    @(Model.Instructor?.InstFullName ?? "N/A")
                </li>
                <li class="list-group-item">
                    <strong><i class="bi bi-tags me-2"></i>Category:</strong>
                    @(Model.Category?.CategName ?? "Uncategorized")
                </li>
                <li class="list-group-item">
                    <strong><i class="bi bi-calendar-event me-2"></i>Created At:</strong>
                    @(Model.CreatedAt?.ToString("yyyy-MM-dd") ?? "—")
                </li>
                <li class="list-group-item">
                    <strong><i class="bi bi-award me-2"></i>Premium Course:</strong>
                    @(Model.IsPremium == true ? "Yes" : "No")
                </li>
                <li class="list-group-item">
                    <strong><i class="bi bi-people-fill me-2"></i>Enrolled Students:</strong>
                    @(Model.Enrollments?.Count ?? 0)
                </li>
            </ul>
        </div>

        <!-- Enrollment / Actions Footer -->
        <div class="card-footer d-flex justify-content-between align-items-center">
            @if (role == "Student")
            {
                if (isEnrolled)
                {
                    <span class="badge bg-success">
                        <i class="bi bi-check-circle me-1"></i> Enrolled
                    </span>
                }
                else
                {
                    <form asp-controller="Courses" asp-action="Enroll" method="post" class="m-0 d-inline">
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="courseId" value="@Model.CourseId" />
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-cart-plus me-1"></i> Enroll
                        </button>
                    </form>
                }
            }

            <div class="ms-auto d-flex gap-2">
                <a class="btn btn-secondary" asp-action="Index">
                    <i class="bi bi-arrow-left-circle me-1"></i> Back to List
                </a>

                @if (role == "Student" && isEnrolled)
                {
                    <a class="btn btn-success" asp-controller="Courses" asp-action="Content" asp-route-id="@Model.CourseId">
                        <i class="bi bi-play-circle me-1"></i> Go to Course Content
                    </a>
                }


                    @if (role == "Instructor" && studentId==Model.InstructorId)
                    {
                        <a asp-controller="Modules" asp-action="Index" asp-route-courseId="@Model.CourseId"
                           class="btn btn-outline-primary">
                            <i class="bi bi-list-task"></i> Manage Modules
                        </a>
                    }
                
            </div>
        </div>
    </div>

    <hr />

    <!-- COURSE OVERVIEW -->
    <div class="container mt-4">
        <h4 class="mb-3">📌 What You'll Learn</h4>

        @if (Model.Modules != null && Model.Modules.Any())
        {
            <ul class="list-group">
                @foreach (var module in Model.Modules)
                {
                    <li class="list-group-item">
                        <strong>@module.ModuleTitle</strong>
                        @if (module.Lessons != null && module.Lessons.Any())
                        {
                            <ul class="mt-2">
                                @foreach (var lesson in module.Lessons)
                                {
                                    <li>@lesson.LessonTitle</li>
                                }
                            </ul>
                        }
                        else
                        {
                            <p class="text-muted small mb-0">No lessons added yet.</p>
                        }
                    </li>
                }
            </ul>
        }
        else
        {
            <p class="text-muted">Modules for this course will be added soon.</p>
        }
    </div>
</div>
