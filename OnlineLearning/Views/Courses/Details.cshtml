@model OnlineLearning.Models.Course

@{
    ViewData["Title"] = "Course Details";
}

<div class="container mt-4">
    <div class="card shadow-lg border-0 rounded-4">
        <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center rounded-top-4">
            <h3 class="mb-0"><i class="bi bi-journal-bookmark-fill me-2"></i>@Model.CourseTitle</h3>
            @if (Model.IsPremium == true)
            {
                <span class="badge bg-warning text-dark"><i class="bi bi-star-fill me-1"></i>Premium</span>
            }
        </div>

        <div class="card-body">
            <p class="mb-4 text-muted">@Model.CourseDescription</p>

            <ul class="list-group list-group-flush">
                <li class="list-group-item">
                    <strong><i class="bi bi-person-video2 me-2"></i>Instructor ID:</strong> @Model.Instructor?.InstId
                </li>
                <li class="list-group-item">
                    <strong><i class="bi bi-tags me-2"></i>Category:</strong> @Model.Category?.CategId
                </li>
                <li class="list-group-item">
                    <strong><i class="bi bi-calendar-event me-2"></i>Created At:</strong> @Model.CreatedAt?.ToString("yyyy-MM-dd")
                </li>
                <li class="list-group-item">
                    <strong><i class="bi bi-award me-2"></i>Premium Course:</strong>
                    @(Model.IsPremium == true ? "Yes" : "No")
                </li>
            </ul>
        </div>

        <div class="card-footer d-flex justify-content-between align-items-center">
            <a class="btn btn-outline-primary" asp-action="Edit" asp-route-id="@Model?.CourseId">
                <i class="bi bi-pencil-square me-1"></i>Edit
            </a>
            <a class="btn btn-secondary" asp-action="Index">
                <i class="bi bi-arrow-left-circle me-1"></i>Back to List
            </a>
        </div>
    </div>
</div>
