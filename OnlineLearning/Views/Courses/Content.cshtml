@model OnlineLearning.Models.Course
@{
    ViewData["Title"] = "Course Content - " + Model.CourseTitle;
}

<div class="container-fluid mt-4">
    <h2 class="mb-4">🎓 @Model.CourseTitle - Content</h2>

    <div class="row">
        <!-- Modules List (Left Sidebar) -->
        <div class="col-lg-4 col-md-12" style="max-height: 80vh; overflow-y: auto;">
            @if (Model.Modules != null && Model.Modules.Any())
            {
                <div class="accordion" id="courseContentAccordion">
                    @foreach (var module in Model.Modules)
                    {
                        <div class="accordion-item">
                            <h2 class="accordion-header" id="heading-@module.ModuleId">
                                <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse"
                                        data-bs-target="#collapse-@module.ModuleId">
                                    @module.ModuleTitle
                                    <span class="badge bg-primary ms-2">@(module.Lessons?.Count ?? 0) Lessons</span>
                                    @if ((module.Quizzes?.Count ?? 0) > 0)
                                    {
                                        <span class="badge bg-warning text-dark ms-1">Quiz Available</span>
                                    }
                                </button>
                            </h2>
                            <div id="collapse-@module.ModuleId" class="accordion-collapse collapse"
                                 data-bs-parent="#courseContentAccordion">
                                <div class="accordion-body">
                                    <!-- Lessons Section -->
                                    @if (module.Lessons != null && module.Lessons.Any())
                                    {
                                        <h6 class="mb-2"><i class="bi bi-journal-text"></i> Lessons</h6>
                                        <ul class="list-group mb-3">
                                            @foreach (var lesson in module.Lessons)
                                            {
                                                <li class="list-group-item d-flex justify-content-between align-items-center">
                                                    <div class="d-flex align-items-center">
                                                        @if (lesson.Type == "video")
                                                        {
                                                            <i class="bi bi-play-circle text-primary me-2"></i>
                                                        }
                                                        else
                                                        {
                                                            <i class="bi bi-file-pdf text-danger me-2"></i>
                                                        }
                                                        @lesson.LessonTitle
                                                    </div>
                                                    <button class="btn btn-sm btn-outline-primary"
                                                            onclick="viewLesson(@lesson.LessonId)">
                                                        <i class="bi bi-eye"></i> View
                                                    </button>
                                                </li>
                                            }
                                        </ul>
                                    }
                                    else
                                    {
                                        <p class="text-muted small">No lessons available yet.</p>
                                    }

                                    <!-- Quiz Section -->
                                    @if ((module.Quizzes?.Count ?? 0) > 0)
                                    {
                                        <h6 class="mb-2"><i class="bi bi-question-circle text-warning"></i> Quiz</h6>
                                        <div class="d-grid">
                                            <button class="btn btn-warning btn-sm" onclick="takeQuiz(@module.ModuleId)">
                                                <i class="bi bi-pencil-square"></i> Take Quiz (@(module.Quizzes.Count) Questions)
                                            </button>
                                        </div>
                                    }
                                    else
                                    {
                                        <div class="alert alert-info py-2 small mb-0">
                                            <i class="bi bi-info-circle"></i> No quiz available for this module yet.
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>
                    }
                </div>
            }
            else
            {
                <div class="alert alert-info">
                    <i class="bi bi-info-circle"></i> No modules available yet.
                </div>
            }
        </div>

        <!-- Content Player (Right) -->
        <div class="col-lg-8 col-md-12">
            <!-- Welcome Message -->
            <div id="welcomeMessage" class="text-center py-5">
                <i class="bi bi-mortarboard display-1 text-primary"></i>
                <h3 class="mt-3">Welcome to @Model.CourseTitle</h3>
                <p class="text-muted">Select a lesson from the left sidebar to start learning, or take a quiz to test your knowledge!</p>
            </div>

            <!-- Lesson Player Container -->
            <div id="lessonPlayerContainer" style="display:none;">
                <div class="d-flex justify-content-between align-items-center mb-3">
                    <h4 id="lessonTitle" class="mb-0"></h4>
                    <button class="btn btn-outline-secondary btn-sm" onclick="closeLessonPlayer()">
                        <i class="bi bi-x-lg"></i> Close
                    </button>
                </div>
                <div id="lessonContent"></div>
            </div>

            <!-- Quiz Container -->
            <div id="quizContainer" style="display:none;">
                <div class="d-flex justify-content-between align-items-center mb-3">
                    <h4 id="quizTitle" class="mb-0"></h4>
                    <button class="btn btn-outline-secondary btn-sm" onclick="closeQuizPlayer()">
                        <i class="bi bi-x-lg"></i> Close
                    </button>
                </div>
                <div id="quizContent"></div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function viewLesson(lessonId) {
            fetch(`/Lessons/ViewLesson/${lessonId}`)
                .then(response => {
                    if (!response.ok) throw new Error("Unable to load lesson.");
                    return response.json();
                })
                .then(data => {
                    showLessonPlayer(data);
                })
                .catch(error => {
                    alert(error.message);
                    console.error('Error loading lesson:', error);
                });
        }

        function showLessonPlayer(data) {
            // Hide other containers
            document.getElementById("welcomeMessage").style.display = "none";
            document.getElementById("quizContainer").style.display = "none";

            // Show lesson player
            const playerContainer = document.getElementById("lessonPlayerContainer");
            const titleElement = document.getElementById("lessonTitle");
            const contentElement = document.getElementById("lessonContent");

            playerContainer.style.display = "block";
            titleElement.innerHTML = `<i class="bi bi-journal-text text-primary me-2"></i>${data.title}`;
            contentElement.innerHTML = "";

            if (data.type === "video") {
                contentElement.innerHTML = `
                            <div class="ratio ratio-16x9">
                                <iframe src="${data.url}" allowfullscreen class="border-0 rounded-3 shadow"></iframe>
                            </div>`;
            }
            else if (data.type === "pdf") {
                contentElement.innerHTML = `
                            <div class="border rounded shadow">
                                <iframe src="${data.url}" width="100%" height="600px" class="border-0 rounded"></iframe>
                            </div>`;
            }
        }

        function takeQuiz(moduleId) {
            console.log('Taking quiz for module:', moduleId); // Debug log

            fetch(`/Quizzes/TakeQuiz?moduleId=${moduleId}`, {
                method: 'GET',
                headers: {
                    'Accept': 'text/html',
                    'X-Requested-With': 'XMLHttpRequest'
                }
            })
                .then(response => {
                    console.log('Response status:', response.status); // Debug log

                    if (!response.ok) {
                        if (response.status === 401) {
                            throw new Error("You need to be enrolled in this course to take the quiz.");
                        }
                        if (response.status === 404) {
                            throw new Error("Quiz not found for this module.");
                        }
                        throw new Error(`Server error: ${response.status} - ${response.statusText}`);
                    }
                    return response.text();
                })
                .then(html => {
                    console.log('Quiz loaded successfully'); // Debug log
                    showQuizPlayer(html, moduleId);
                })
                .catch(error => {
                    console.error('Error loading quiz:', error);
                    alert(`Error loading quiz: ${error.message}`);
                });
        }

        function showQuizPlayer(html, moduleId) {
            // Hide other containers
            document.getElementById("welcomeMessage").style.display = "none";
            document.getElementById("lessonPlayerContainer").style.display = "none";

            // Show quiz player
            const quizContainer = document.getElementById("quizContainer");
            const titleElement = document.getElementById("quizTitle");
            const contentElement = document.getElementById("quizContent");

            quizContainer.style.display = "block";
            titleElement.innerHTML = `<i class="bi bi-question-circle text-warning me-2"></i>Quiz`;

            // Check if response contains an error
            if (html.includes('"error"')) {
                try {
                    const errorData = JSON.parse(html);
                    contentElement.innerHTML = `
                                <div class="alert alert-danger">
                                    <i class="bi bi-exclamation-triangle"></i> ${errorData.error}
                                </div>
                            `;
                    return;
                } catch (e) {
                    // Not JSON, continue with normal processing
                }
            }

            contentElement.innerHTML = html;

            // Update form action to handle AJAX submission
            const form = contentElement.querySelector('form');
            if (form) {
                form.addEventListener('submit', function (e) {
                    e.preventDefault();
                    submitQuizAjax(form, moduleId);
                });
            }
        }

        function submitQuizAjax(form, moduleId) {
            const formData = new FormData(form);

            // Show loading state
            const submitBtn = form.querySelector('button[type="submit"]');
            const originalText = submitBtn.innerHTML;
            submitBtn.innerHTML = '<i class="bi bi-hourglass-split"></i> Submitting...';
            submitBtn.disabled = true;

            fetch(`/Quizzes/SubmitQuiz?moduleId=${moduleId}`, {
                method: 'POST',
                body: formData,
                headers: {
                    'X-Requested-With': 'XMLHttpRequest'
                }
            })
                .then(response => {
                    console.log('Submit response status:', response.status); // Debug log
                    if (!response.ok) {
                        throw new Error(`Unable to submit quiz: ${response.status} - ${response.statusText}`);
                    }
                    return response.text();
                })
                .then(html => {
                    console.log('Quiz submitted successfully'); // Debug log
                    document.getElementById("quizContent").innerHTML = html;
                })
                .catch(error => {
                    console.error('Error submitting quiz:', error);
                    alert(`Error submitting quiz: ${error.message}`);
                    // Restore button
                    submitBtn.innerHTML = originalText;
                    submitBtn.disabled = false;
                });
        }

        function closeLessonPlayer() {
            document.getElementById("lessonPlayerContainer").style.display = "none";
            document.getElementById("welcomeMessage").style.display = "block";
        }

        function closeQuizPlayer() {
            document.getElementById("quizContainer").style.display = "none";
            document.getElementById("welcomeMessage").style.display = "block";
        }
    </script>
}