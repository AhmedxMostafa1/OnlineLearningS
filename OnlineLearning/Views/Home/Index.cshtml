@{
    ViewData["Title"] = "Home Page";
}

<div class="container mt-5">
    <div class="text-center mb-5">
        <h1 class="display-4 fw-bold">Welcome to Online Learning</h1>
        <p class="lead text-muted">Empowering you to learn anytime, anywhere with expert instructors and high-quality courses.</p>
    </div>

    <div class="row justify-content-center mb-4">
        <div class="col-md-8">
            <div class="card shadow-lg border-0 rounded-3">
                <div class="card-body p-4 text-center">
                    <h2 class="mb-3">Start Your Learning Journey Today</h2>
                    <p class="text-secondary">
                        Browse our wide range of courses and start learning at your own pace. Whether you're a student, professional, or hobbyist, we have something for you!
                    </p>
                    <a asp-controller="Courses" asp-action="Index" class="btn btn-primary btn-lg px-4 me-2">Browse Courses</a>
                </div>
            </div>
        </div>
    </div>

    <div class="row text-center mt-5">
        <div class="col-md-4 mb-4">
            <div class="card h-100 shadow-sm border-0">
                <div class="card-body">
                    <h5 class="card-title fw-bold">Expert Instructors</h5>
                    <p class="card-text text-muted">Learn from experienced instructors who are passionate about teaching and sharing their knowledge.</p>
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-4">
            <div class="card h-100 shadow-sm border-0">
                <div class="card-body">
                    <h5 class="card-title fw-bold">Flexible Learning</h5>
                    <p class="card-text text-muted">Access courses anytime, anywhere, and learn at your own pace with our user-friendly platform.</p>
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-4">
            <div class="card h-100 shadow-sm border-0">
                <div class="card-body">
                    <h5 class="card-title fw-bold">Certificates</h5>
                    <p class="card-text text-muted">Earn certificates to showcase your skills and boost your professional career opportunities.</p>
                </div>
            </div>
        </div>
    </div>
</div>
