@model IEnumerable<OnlineLearning.Models.Lesson>

@{
    ViewData["Title"] = "Lessons for " + ViewBag.ModuleTitle;
    var role = Context.Session.GetString("UserRole");
}

<h2>📖 Lessons for @ViewBag.ModuleTitle</h2>

<a asp-action="Create" asp-route-moduleId="@ViewBag.ModuleId" class="btn btn-primary mb-3">
    ➕ Add Lesson
</a>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Title</th>
            <th>Type</th>
            <th>Content</th>
            @if (role == "Instructor")
            {
                <th>Actions</th>
            }
        </tr>
    </thead>
    <tbody>
        @foreach (var lesson in Model)
        {
            <tr>
                <td>@lesson.LessonTitle</td>
                <td>@lesson.Type</td>
                <td>
                    @if (lesson.Type == "video")
                    {
                        <a href="@lesson.LessonContentUrl" target="_blank" class="btn btn-sm btn-info">Watch Video</a>
                    }
                    else
                    {
                        <a href="@lesson.LessonContentUrl" target="_blank" class="btn btn-sm btn-secondary">View PDF</a>
                    }
                </td>

                @if (role == "Instructor")
                {
                    <td>
                        <a asp-action="Edit" asp-route-id="@lesson.LessonId" class="btn btn-sm btn-warning">
                            <i class="bi bi-pencil-square"></i> Edit
                        </a>
                        <a asp-action="Delete" asp-route-id="@lesson.LessonId" class="btn btn-sm btn-danger">
                            <i class="bi bi-trash"></i> Delete
                        </a>
                    </td>
                }
            </tr>
        }
    </tbody>
</table>
