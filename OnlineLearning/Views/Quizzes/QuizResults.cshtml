@{
    ViewData["Title"] = "Quiz Results - " + ViewBag.ModuleTitle;
}

<div class="container py-4">
    <h2 class="mb-4 text-success">📊 Quiz Results: @ViewBag.ModuleTitle</h2>

    <!-- Score Summary -->
    <div class="row mb-4">
        <div class="col-md-8 mx-auto">
            <div class="card border-primary">
                <div class="card-header bg-primary text-white text-center">
                    <h4 class="mb-0">Your Score</h4>
                </div>
                <div class="card-body text-center">
                    <h2 class="display-4 text-primary">@ViewBag.CorrectAnswers/@ViewBag.TotalQuestions</h2>
                    <h3 class="text-muted">@ViewBag.Percentage.ToString("F1")%</h3>
                    @if (ViewBag.Percentage >= 80)
                    {
                        <div class="alert alert-success">
                            <i class="bi bi-trophy-fill"></i> Excellent work! You passed with flying colors!
                        </div>
                    }
                    else if (ViewBag.Percentage >= 60)
                    {
                        <div class="alert alert-warning">
                            <i class="bi bi-check-circle"></i> Good job! You passed the quiz.
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-danger">
                            <i class="bi bi-x-circle"></i> Keep studying! Consider reviewing the material and trying again.
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- Detailed Results -->
    <h4 class="mb-3">Review Your Answers</h4>
    @foreach (var result in ViewBag.Results)
    {
        <div class="card mb-3 @(result.IsCorrect ? "border-success" : "border-danger")">
            <div class="card-header @(result.IsCorrect ? "bg-success" : "bg-danger") text-white">
                <div class="d-flex justify-content-between align-items-center">
                    <span>@result.Question</span>
                    @if (result.IsCorrect)
                    {
                        <i class="bi bi-check-circle-fill"></i>
                    }
                    else
                    {
                        <i class="bi bi-x-circle-fill"></i>
                    }
                </div>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-3">
                        <strong>A)</strong> @result.OptionA
                        @if (result.UserAnswer == "A")
                        {
                            <span class="badge bg-primary ms-2">Your Answer</span>
                        }
                        @if (result.CorrectAnswer == "A")
                        {
                            <span class="badge bg-success ms-2">Correct</span>
                        }
                    </div>
                    <div class="col-md-3">
                        <strong>B)</strong> @result.OptionB
                        @if (result.UserAnswer == "B")
                        {
                            <span class="badge bg-primary ms-2">Your Answer</span>
                        }
                        @if (result.CorrectAnswer == "B")
                        {
                            <span class="badge bg-success ms-2">Correct</span>
                        }
                    </div>
                    <div class="col-md-3">
                        <strong>C)</strong> @result.OptionC
                        @if (result.UserAnswer == "C")
                        {
                            <span class="badge bg-primary ms-2">Your Answer</span>
                        }
                        @if (result.CorrectAnswer == "C")
                        {
                            <span class="badge bg-success ms-2">Correct</span>
                        }
                    </div>
                    <div class="col-md-3">
                        <strong>D)</strong> @result.OptionD
                        @if (result.UserAnswer == "D")
                        {
                            <span class="badge bg-primary ms-2">Your Answer</span>
                        }
                        @if (result.CorrectAnswer == "D")
                        {
                            <span class="badge bg-success ms-2">Correct</span>
                        }
                    </div>
                </div>
            </div>
        </div>
    }

    <div class="text-center mt-4">
        <a href="javascript:history.back()" class="btn btn-secondary">Back to Course</a>
    </div>
</div>