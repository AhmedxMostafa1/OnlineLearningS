@model IEnumerable<OnlineLearning.Models.Quiz>
@{
    ViewData["Title"] = "Quizzes for " + ViewBag.ModuleTitle;
}

<div class="container py-4">
    <h2 class="mb-4 text-primary">🧠 Quizzes for @ViewBag.ModuleTitle</h2>

    <!-- Add Quiz Button -->
    <div class="mb-3 text-end">
        <a asp-action="Create" asp-route-moduleId="@ViewBag.ModuleId" class="btn btn-success">
            <i class="bi bi-plus-circle"></i> Add Quiz Question
        </a>
        <a href="javascript:history.back()" class="btn btn-secondary">
            <i class="bi bi-arrow-left"></i> Back to Modules
        </a>
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-info">
            No quiz questions have been added for this module yet.
        </div>
    }
    else
    {
        <table class="table table-bordered table-striped align-middle shadow-sm">
            <thead class="table-primary">
                <tr>
                    <th>Question</th>
                    <th>Correct Answer</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var quiz in Model)
                {
                    <tr>
                        <td>@quiz.Question</td>
                        <td>
                            <span class="badge bg-success">Option @quiz.CorrectOption</span>
                        </td>
                        <td>
                            <div class="d-flex gap-2">
                                <a asp-action="Edit" asp-route-id="@quiz.QuizId" class="btn btn-warning btn-sm">
                                    <i class="bi bi-pencil"></i> Edit
                                </a>
                                <a asp-action="Delete" asp-route-id="@quiz.QuizId" class="btn btn-danger btn-sm">
                                    <i class="bi bi-trash"></i> Delete
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>