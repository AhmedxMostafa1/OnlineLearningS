<!-- Score Summary -->
<div class="row mb-4">
    <div class="col-md-8 mx-auto">
        <div class="card border-primary">
            <div class="card-header bg-primary text-white text-center">
                <h4 class="mb-0"><i class="bi bi-trophy"></i> Quiz Complete!</h4>
            </div>
            <div class="card-body text-center">
                <h2 class="display-4 text-primary">@ViewBag.CorrectAnswers/@ViewBag.TotalQuestions</h2>
                <h3 class="text-muted">@ViewBag.Percentage.ToString("F1")%</h3>
                @if (ViewBag.Percentage >= 80)
                {
                    <div class="alert alert-success">
                        <i class="bi bi-trophy-fill"></i> Excellent work! You passed with flying colors!
                    </div>
                }
                else if (ViewBag.Percentage >= 60)
                {
                    <div class="alert alert-warning">
                        <i class="bi bi-check-circle"></i> Good job! You passed the quiz.
                    </div>
                }
                else
                {
                    <div class="alert alert-danger">
                        <i class="bi bi-x-circle"></i> Keep studying! Consider reviewing the material.
                    </div>
                }
            </div>
        </div>
    </div>
</div>

<!-- Detailed Results -->
<h5 class="mb-3">📝 Review Your Answers</h5>
<div style="max-height: 400px; overflow-y: auto;">
    @{
        int questionNum = 1;
    }
    @foreach (var result in ViewBag.Results)
    {
        <div class="card mb-3 @(result.IsCorrect ? "border-success" : "border-danger")">
            <div class="card-header @(result.IsCorrect ? "bg-success" : "bg-danger") text-white">
                <div class="d-flex justify-content-between align-items-center">
                    <span><strong>Question @questionNum:</strong> @result.Question</span>
                    @if (result.IsCorrect)
                    {
                        <i class="bi bi-check-circle-fill"></i>
                    }
                    else
                    {
                        <i class="bi bi-x-circle-fill"></i>
                    }
                </div>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6">
                        <div class="mb-2">
                            <strong>A)</strong> @result.OptionA
                            @if (result.UserAnswer == "A")
                            {
                                <span class="badge bg-primary ms-2">Your Answer</span>
                            }
                            @if (result.CorrectAnswer == "A")
                            {
                                <span class="badge bg-success ms-2">✓ Correct</span>
                            }
                        </div>
                        <div class="mb-2">
                            <strong>C)</strong> @result.OptionC
                            @if (result.UserAnswer == "C")
                            {
                                <span class="badge bg-primary ms-2">Your Answer</span>
                            }
                            @if (result.CorrectAnswer == "C")
                            {
                                <span class="badge bg-success ms-2">✓ Correct</span>
                            }
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="mb-2">
                            <strong>B)</strong> @result.OptionB
                            @if (result.UserAnswer == "B")
                            {
                                <span class="badge bg-primary ms-2">Your Answer</span>
                            }
                            @if (result.CorrectAnswer == "B")
                            {
                                <span class="badge bg-success ms-2">✓ Correct</span>
                            }
                        </div>
                        <div class="mb-2">
                            <strong>D)</strong> @result.OptionD
                            @if (result.UserAnswer == "D")
                            {
                                <span class="badge bg-primary ms-2">Your Answer</span>
                            }
                            @if (result.CorrectAnswer == "D")
                            {
                                <span class="badge bg-success ms-2">✓ Correct</span>
                            }
                        </div>
                    </div>
                </div>
                @if (!result.IsCorrect)
                {
                    <div class="alert alert-info mt-2 py-2">
                        <small><i class="bi bi-info-circle"></i> <strong>Correct Answer:</strong> Option @result.CorrectAnswer</small>
                    </div>
                }
            </div>
        </div>
        questionNum++;
    }
</div>

<div class="text-center mt-4">
    <button class="btn btn-secondary" onclick="closeQuizPlayer()">
        <i class="bi bi-arrow-left"></i> Back to Course
    </button>
    <button class="btn btn-primary" onclick="takeQuiz(@ViewBag.ModuleId)">
        <i class="bi bi-arrow-repeat"></i> Retake Quiz
    </button>
</div>