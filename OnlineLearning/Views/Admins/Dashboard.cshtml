@{
    ViewData["Title"] = "Admin Panel";
    var students = ViewBag.Students as List<OnlineLearning.Models.Student>;
    var instructors = ViewBag.Instructors as List<OnlineLearning.Models.Instructor>;
    string userType = ViewBag.UserType as string;
}

<h2>Admin Panel</h2>

<form method="get" asp-action="Dashboard" class="row g-3 mb-4">
    <div class="col-md-3">
        <select name="userType" class="form-select" required>
            <option value="">Select User Type</option>
            <option value="Student" selected="@(userType == "Student" ? "selected" : null)">Student</option>
            <option value="Instructor" selected="@(userType == "Instructor" ? "selected" : null)">Instructor</option>
        </select>

    </div>
    <div class="col-md-3">
        <select name="searchBy" class="form-select" required>
            <option value="Id">Search by ID</option>
            <option value="Name">Search by Name</option>
        </select>
    </div>
    <div class="col-md-4">
        <input type="text" name="searchTerm" class="form-control" placeholder="Enter search term" />
    </div>
    <div class="col-md-2">
        <button type="submit" class="btn btn-primary w-100">Search</button>
    </div>
</form>

<hr />

@if (string.IsNullOrEmpty(userType) || userType == "Student")
{
    <h3>Students</h3>
    <table class="table table-bordered table-striped">
        <thead class="table-dark">
            <tr>
                <th>ID</th>
                <th>Full Name</th>
                <th>Email</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var student in ViewBag.Students)
            {
                <tr onclick="window.location.href='@Url.Action("StudentDetails", "Admins", new { id = student.StuId })'">
                    <td>
                        <a asp-action="StudentDetails" asp-route-id="@student.StuId" class="text-decoration-none text-primary" style="cursor: pointer;">
                            @student.StuFullName
                        </a>
                    </td>
                    <td>@student.StuEmail</td>
                    <td>
                        <form asp-action="DeleteStudent" method="post">
                            <input type="hidden" name="id" value="@student.StuId" />
                            <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                        </form>
                    </td>
                </tr>
            }

        </tbody>
    </table>
}

@if (string.IsNullOrEmpty(userType) || userType == "Instructor")
{
    <h3>Instructors</h3>
    <table class="table table-bordered table-striped">
        <thead class="table-dark">
            <tr>
                <th>ID</th>
                <th>Full Name</th>
                <th>Email</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var Instructor in ViewBag.Instructors)
            {
                <tr onclick="window.location.href='@Url.Action("InstructorDetails", "Admins", new { id = Instructor.InstId })'">
                    <td>
                        <a asp-action="InstructorDetails" asp-route-id="@Instructor.InstId" class="text-decoration-none text-primary" style="cursor: pointer;">
                            @Instructor.InstFullName
                        </a>
                    </td>
                    <td>@Instructor.InstEmail</td>
                    <td>
                        <form asp-action="DeleteInstructor" method="post">
                            <input type="hidden" name="id" value="@Instructor.InstId" />
                            <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                        </form>
                    </td>
                </tr>
            }

        </tbody>
    </table>
}