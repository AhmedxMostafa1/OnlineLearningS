@{
    Layout = null;
    ViewData["Title"] = "Admin Dashboard";
    var students = ViewBag.Students as List<OnlineLearning.Models.Student>;
    var instructors = ViewBag.Instructors as List<OnlineLearning.Models.Instructor>;
    string section = ViewBag.Section as string ?? "summary";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
    <style>
        html, body {
            height: 100%;
            margin: 0;
            font-family: 'Segoe UI', sans-serif;
            background-color: #f8f9fa;
        }

        .wrapper {
            display: flex;
            height: 100vh;
            overflow: hidden;
        }

        .sidebar {
            width: 240px;
            background-color: #343a40;
            color: #fff;
            display: flex;
            flex-direction: column;
            padding-top: 20px;
            position: fixed;
            top: 0;
            bottom: 0;
            left: 0;
            z-index: 1000;
        }

            .sidebar h4 {
                text-align: center;
                margin-bottom: 20px;
            }

            .sidebar a {
                padding: 15px 20px;
                color: #ccc;
                text-decoration: none;
                transition: background 0.3s;
            }

                .sidebar a.active,
                .sidebar a:hover {
                    background-color: #007bff;
                    color: #fff;
                }

        .content {
            margin-left: 240px;
            padding: 30px;
            overflow-y: auto;
            flex-grow: 1;
        }

        .dashboard-cards {
            display: flex;
            gap: 20px;
            margin-bottom: 30px;
            flex-wrap: wrap;
        }

        .card {
            background: #fff;
            border: 1px solid #dee2e6;
            border-radius: 8px;
            padding: 20px;
            flex: 1;
            min-width: 200px;
            text-align: center;
            box-shadow: 0 0 10px rgba(0,0,0,0.05);
        }

        .top-bar {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 20px;
        }

        .logout-btn {
            background-color: #dc3545;
            color: white;
            border: none;
            padding: 8px 16px;
            border-radius: 5px;
            text-decoration: none;
        }

            .logout-btn:hover {
                background-color: #c82333;
            }

        .search-container {
            text-align: center;
            margin-bottom: 20px;
        }

            .search-container input {
                width: 50%;
                padding: 8px;
                border-radius: 5px;
                border: 1px solid #ccc;
            }

        table {
            background: #fff;
        }
    </style>
</head>
<body>
    <div class="wrapper">
        <!-- Sidebar -->
        <div class="sidebar">
            <h4>Admin</h4>
            <a class="@(section == "summary" ? "active" : "")" href="@Url.Action("Dashboard", new { section = "summary" })">Dashboard</a>
            <a class="@(section == "students" ? "active" : "")" href="@Url.Action("Dashboard", new { section = "students" })">Students</a>
            <a class="@(section == "instructors" ? "active" : "")" href="@Url.Action("Dashboard", new { section = "instructors" })">Instructors</a>
            <a class="@(section == "requests" ? "active" : "")" href="@Url.Action("Dashboard", new { section = "requests" })">Requests</a>
        </div>

        <!-- Main Content -->
        <div class="content">
            <div class="top-bar">
                <h2>@(section.ToUpper())</h2>
                <form asp-controller="Account" asp-action="Logout" method="post">
                    <button type="submit" class="logout-btn">Logout</button>
                </form>
            </div>

            @if (section == "summary")
            {
                <div class="dashboard-cards">
                    <div class="card">
                        <h4>Students</h4>
                        <p>@ViewBag.TotalStudents</p>
                    </div>
                    <div class="card">
                        <h4>Instructors</h4>
                        <p>@ViewBag.TotalInstructors</p>
                    </div>
                    <div class="card">
                        <h4>Courses</h4>
                        <p>@ViewBag.TotalCourses</p>
                    </div>
                </div>
            }

            @if (section == "students")
            {
                <div class="search-container">
                    <input type="text" id="studentSearch" placeholder="Search by ID or Name..." onkeyup="filterTable('studentsTable', this.value)">
                </div>
                <table id="studentsTable" class="table table-bordered table-striped">
                    <thead class="table-dark">
                        <tr>
                            <th>ID</th>
                            <th>Full Name</th>
                            <th>Email</th>
                            <th>Status</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var student in students)
                        {
                            <tr>
                                <td>@student.StuId</td>
                                <td>@student.StuFullName</td>
                                <td>@student.StuEmail</td>
                                <td>@student.Status</td>
                                <td>
                                    <div class="d-flex gap-1">
                                        <form method="post" asp-action="ToggleStudentStatus" asp-route-id="@student.StuId" onsubmit="return confirm('Are you sure you want to toggle this instructor\'s status?');">
                                            <button type="submit" class="btn btn-sm @(student.Status == "Activated" ? "btn-danger" : "btn-success")">
                                                @(student.Status == "Activated" ? "Deactivate" : "Activate")
                                            </button>
                                        </form>

                                        
                                    </div>
                                </td>

                            </tr>
                        }
                    </tbody>
                </table>
            }

            @if (section == "instructors")
            {
                <div class="search-container">
                    <input type="text" id="instructorSearch" placeholder="Search by ID or Name..." onkeyup="filterTable('instructorsTable', this.value)">
                </div>
                <table id="instructorsTable" class="table table-bordered table-striped">
                    <thead class="table-dark">
                        <tr>
                            <th>ID</th>
                            <th>Full Name</th>
                            <th>Email</th>
                            <th>Status</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var instructor in instructors)
                        {
                            <tr>
                                <td>@instructor.InstId</td>
                                <td>@instructor.InstFullName</td>
                                <td>@instructor.InstEmail</td>
                                <td>@instructor.Status</td>
                                <td>
                                    <div class="d-flex gap-1">
                                        <form method="post" asp-action="ToggleInstructorStatus" asp-route-id="@instructor.InstId" onsubmit="return confirm('Are you sure you want to toggle this instructor\'s status?');">
                                            <button type="submit" class="btn btn-sm @(instructor.Status == "Activated" ? "btn-danger" : "btn-success")">
                                                @(instructor.Status == "Activated" ? "Deactivate" : "Activate")
                                            </button>
                                        </form>

                                       
                                    </div>
                                </td>

                            </tr>
                        }
                    </tbody>
                </table>
            }

            @{
                var pendingInstructors = ViewBag.PendingInstructors as List<OnlineLearning.Models.PendingInstructor>;
                string currentSection = ViewBag.Section as string;
            }

            @if (currentSection == "requests" && pendingInstructors != null)
            {
                <h3 class="mb-3">Pending Instructor Applications</h3>
                <table class="table table-bordered">
                    <thead class="table-dark">
                        <tr>
                            <th>Full Name</th>
                            <th>Email</th>
                            <th>Applied At</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var p in pendingInstructors)
                        {
                            <tr>
                                <td>@p.FullName</td>
                                <td>@p.Email</td>
                                
                                <td>@(p.AppliedAt?.ToString("g") ?? "N/A")</td>
                               
                                <td>
                                    <form method="post" asp-action="ApproveInstructor" asp-controller="Admins" class="d-inline">
                                        <input type="hidden" name="id" value="@p.PendingInstId" />
                                        <button type="submit" class="btn btn-success btn-sm">Approve</button>
                                    </form>
                                    <form method="post" asp-action="RejectInstructor" asp-controller="Admins" class="d-inline">
                                        <input type="hidden" name="id" value="@p.PendingInstId" />
                                        <button type="submit" class="btn btn-danger btn-sm">Reject</button>
                                    </form>
                                </td>
                            </tr>

                        }
                    </tbody>
                </table>
            }

        </div>

    </div>

    <script>
        function filterTable(tableId, keyword) {
            const table = document.getElementById(tableId);
            const rows = table.getElementsByTagName("tr");
            const filter = keyword.toLowerCase();

            for (let i = 1; i < rows.length; i++) {
                const idCell = rows[i].cells[0];
                const nameCell = rows[i].cells[1];
                if (idCell && nameCell) {
                    const idText = idCell.textContent.toLowerCase();
                    const nameText = nameCell.textContent.toLowerCase();
                    rows[i].style.display = (idText.includes(filter) || nameText.includes(filter)) ? "" : "none";
                }
            }
        }

    </script>   
</body>
</html>