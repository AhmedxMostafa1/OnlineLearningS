@model OnlineLearning.Models.Module

@{
    ViewData["Title"] = "Create Module";
}

<h1>Create Module</h1>
<h4>For Course: @ViewBag.CourseTitle</h4>
<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <input type="hidden" asp-for="CourseId" />

            <div class="form-group mb-3">
                <label asp-for="ModuleTitle" class="control-label"></label>
                <input asp-for="ModuleTitle" class="form-control" />
                <span asp-validation-for="ModuleTitle" class="text-danger"></span>
            </div>

           

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
                <a asp-action="Index" asp-route-courseId="@ViewBag.CourseId" class="btn btn-secondary">Back to Modules</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
