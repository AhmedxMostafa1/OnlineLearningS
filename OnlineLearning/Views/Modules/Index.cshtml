@model IEnumerable<OnlineLearning.Models.Module>
@{
    ViewData["Title"] = "Modules for " + ViewBag.CourseTitle;
}
<div class="container py-4">
    <h2 class="mb-4 text-primary">📚 Modules for @ViewBag.CourseTitle</h2>
    <!-- Add Module Button -->
    <div class="mb-3 text-end">
        <a asp-action="Create" asp-route-courseId="@ViewBag.CourseId" class="btn btn-success">
            <i class="bi bi-plus-circle"></i> Add Module
        </a>
        <a asp-controller="Courses" asp-action="Details" asp-route-id="@ViewBag.CourseId" class="btn btn-secondary">
            <i class="bi bi-arrow-left"></i> Back to Course
        </a>
    </div>
    @if (!Model.Any())
    {
        <div class="alert alert-info">
            No modules have been added for this course yet.
        </div>
    }
    else
    {
        <table class="table table-bordered table-striped align-middle shadow-sm">
            <thead class="table-primary">
                <tr>
                    <th>Module Title</th>
                    <th>Content</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var module in Model)
                {
                    <tr>
                        <td>@module.ModuleTitle</td>
                        <td>
                            <div class="d-flex gap-1 flex-wrap">
                                <span class="badge bg-info">@(module.Lessons?.Count ?? 0) Lessons</span>
                                <span class="badge bg-warning">@(module.Quizzes?.Count ?? 0) Quiz Questions</span>
                            </div>
                        </td>
                        <td>
                            <div class="d-flex gap-2 flex-wrap">
                                <a asp-controller="Lessons" asp-action="Index" asp-route-moduleId="@module.ModuleId"
                                   class="btn btn-info btn-sm">
                                    <i class="bi bi-journal-text"></i> Manage Lessons
                                </a>
                                <a asp-controller="Quizzes" asp-action="Index" asp-route-moduleId="@module.ModuleId"
                                   class="btn btn-warning btn-sm">
                                    <i class="bi bi-question-circle"></i> Manage Quizzes
                                </a>
                                <a asp-action="Edit" asp-route-id="@module.ModuleId" class="btn btn-outline-warning btn-sm">
                                    <i class="bi bi-pencil"></i> Edit
                                </a>
                                <a asp-action="Delete" asp-route-id="@module.ModuleId" class="btn btn-outline-danger btn-sm">
                                    <i class="bi bi-trash"></i> Delete
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>